<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment8Sln.Models.HomePage"
             Title=""
             BackgroundColor="#e2d3cd">

    <ScrollView>
        <StackLayout>
            <Image Source="banner.jpg"
                 HorizontalOptions="Center"
                 VerticalOptions="Center" />

            <ImageButton
         x:Name="ProductBtn"
         Clicked="ProductBtn_Clicked"
         Aspect="AspectFill"
         Source="products.jpg"       
         WidthRequest="300"
         HeightRequest="300"/>
            
            

            <ImageButton
         x:Name="ToolsBtn"       
         Clicked="ToolsBtn_Clicked"
         Aspect="AspectFill"
         Source="tools.jpg"
         WidthRequest="300"
         HeightRequest="300"/>

        </StackLayout>
    </ScrollView>
</ContentPage>